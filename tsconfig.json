{
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "amd",
    "noImplicitAny": true,
    "sourceMap": true,
    "jsx": "react",
    "jsxFactory": "tsx",
    "lib": [ "dom", "es2015", "es2015.promise", "scripthost" ],
    "target": "es5",
    "experimentalDecorators": true,
    "preserveConstEnums": true,
    "suppressImplicitAnyIndexErrors": true,
    "importHelpers": true,
    "moduleResolution": "node"
  },
  "include": ["./demos"],
  "exclude": ["node_modules"]
}
